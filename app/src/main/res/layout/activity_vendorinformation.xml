<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    tools:context="com.electonicmarket.android.emarket.Activities.vendorinformation">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/vendorinformationtoolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ShoppersHub"
            android:textSize="21dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/vendorinfotoolbartitle"
            android:textColor="@color/White"
            android:layout_marginLeft="20dp"/>

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <com.google.android.gms.maps.MapView
        android:id="@+id/vendorinformationmap"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Opening hours"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vendorinformationopeninghourtitle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="09:00 - 22:00"
        android:textSize="17dp"
        android:textColor="#99000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vendorinformationopeninghourvalue"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/darkline"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Payment Methods"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vendorinformationpaymentmethodstitle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Debit Card on delivery"
        android:textSize="17dp"
        android:textColor="#99000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vendorinformationpaymentmethoddebitcard"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Cash on delivery"
        android:textSize="17dp"
        android:textColor="#90000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vendorinformationpaymentmethodcash"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ratinglayout">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/darkline"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Rate this vendor"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vendorinformationratethisvendor"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:numStars="5"
        android:layout_marginLeft="20dp"
        android:id="@+id/vendorinformationratingbar"
        style="@style/myratingbar"
        android:rating="0"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:textSize="17dp"
            android:gravity="center|left"
            android:id="@+id/vendorinformationsubmitrate"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

            </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/darkline"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Deals"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vendorinformationdealtitle"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vendorinfodealrecyclerview">

            </androidx.recyclerview.widget.RecyclerView>
            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/dealprogressbar"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
