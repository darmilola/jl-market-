<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:id="@+id/checkouttoolbar"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="22dp"
            android:gravity="left|center"
            android:id="@+id/checkouttoolbartitle"
            android:textColor="@color/White"
            android:text="CheckOut"/>

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentlayout"
        android:visibility="gone"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#60000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/checkoutdeliverytimetitle"
                    android:text="DELIVER"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:id="@+id/checkoutdeliverytime"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Delivery in 45 min"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/darkline"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <fragment
                    android:id="@+id/checkoutmap"
                    class="com.electonicmarket.android.emarket.Models.StaticMapFragment"
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:maxLines="3"
                        android:id="@+id/checkoutaddress"
                        android:ellipsize="end"
                        android:layout_marginRight="10dp"
                        android:text="tafawa balewa way along murtala mahameed hghghghggh"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:maxLines="2"
                        android:id="@+id/checkoutstateandarea"
                        android:ellipsize="end"
                        android:layout_marginRight="10dp"
                        android:text="central business district abuja nigeria"/>

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/darkline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#70000000"
                    android:textSize="18dp"
                    android:id="@+id/checkoutphonenumbertitle"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:text="PHONE NUMBER"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:id="@+id/checkoutphonenumber"
                    android:text="+234  81028536533"></TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/darkline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#70000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:id="@+id/checkoutpaymentdetailstitle"
                    android:text="PAYMENT DETAILS"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:id="@+id/checkoutpaymentdetails"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:text="Cash on delivery"></TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/darkline"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/checkoutRecyclerView">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
                    <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="70dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Subtotal"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:id="@+id/checkoutsubtotal"
                        android:textColor="#90000000"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="N160,00000"
                        android:gravity="right|center"
                        android:textSize="17dp"
                        android:maxLines="1"
                        android:id="@+id/checkoutsubtotalvalue"

                        android:ellipsize="end"
                        android:textColor="#90000000"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Service fee"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:id="@+id/checkoutservicefee"
                        android:textColor="#90000000"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:text="Free"
                        android:id="@+id/checkoutservicefeevalue"
                        android:gravity="right|center"
                        android:textSize="17dp"
                        android:maxLines="1"

                        android:ellipsize="end"
                        android:textColor="#90000000"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="VAT(5%)"
                        android:gravity="center"
                        android:id="@+id/checkoutvat"
                        android:textSize="17dp"
                        android:textColor="#90000000"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:text="N500"
                        android:gravity="right|center"
                        android:textSize="17dp"
                        android:maxLines="1"
                        android:id="@+id/checkoutvatvalue"

                        android:ellipsize="end"
                        android:textColor="#90000000"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Delivery Fee"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:id="@+id/checkoutdeliveryfee"
                        android:textColor="#90000000"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:text="N400"
                        android:gravity="right|center"
                        android:textSize="17dp"
                        android:id="@+id/checkoutdeliveryfeevalue"
                        android:maxLines="1"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:textColor="#90000000"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/darkline"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="40dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Total"
                        android:id="@+id/checkoutTotal"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:text="N16,000"
                        android:gravity="right|center"
                        android:textSize="17dp"
                        android:id="@+id/checkouttotalvalue"
                        android:maxLines="1"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:textColor="#000000"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/darkline"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



          <Button
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:text="Place Order"
              android:textSize="20dp"
              android:id="@+id/placeorder"
              android:textAllCaps="false"
              android:layout_alignParentBottom="true"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="10dp"
              android:background="@drawable/seevendorbuttondesign"
              android:textColor="@color/White"
              android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/progressbarlayout">
    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/nonetworklayout">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_connection"
            android:id="@+id/nonetworkimage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#90000000"
            android:text="No Network Connection"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/nonetworktext"
            android:textSize="23dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:id="@+id/nonetworkbutton"
            android:background="@drawable/loginbuttondesign"
            android:textColor="@color/White"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/errorlayout">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/erroricon"
            android:id="@+id/errorimage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#90000000"
            android:text="Error Occured please try again"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/errortext"
            android:textSize="23dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:id="@+id/errorbutton"
            android:background="@drawable/loginbuttondesign"
            android:textColor="@color/White"/>
    </LinearLayout>


</RelativeLayout>