<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context="com.electonicmarket.android.emarket.Activities.becomeavendor">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/changepasswordtoolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="20dp"

            android:id="@+id/changepasswordtitle"
            android:textColor="@color/White"
            android:layout_marginLeft="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/newpasswordtitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            android:text="New Password"
            android:textColor="#000000"
            android:textSize="18dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:maxLines="1"
            android:inputType="textPassword"
            android:id="@+id/newpasswordvalue"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextrectangle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Retype new Password "
            android:textSize="18dp"
            android:id="@+id/newpasswordretypetitle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:maxLines="1"
            android:inputType="textPassword"
            android:gravity="left|center"
            android:textSize="20dp"
            android:id="@+id/newpasswordretypevalue"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextrectangle"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Change Password"
            android:textSize="18dp"
            android:id="@+id/changepassword"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/seevendorbuttondesign"
            android:textColor="@color/White"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>
