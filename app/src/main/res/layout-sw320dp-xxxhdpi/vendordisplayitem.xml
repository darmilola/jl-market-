<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="295dp"
    android:background="#ebebeb"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitXY"

            android:id="@+id/vendordisplayimage"
            xmlns:fresco = "http://schemas.android.com/apk/res-auto"
            fresco:placeholderImage="@drawable/productplaceholder"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImageScaleType="fitXY"
           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/vendorname"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Marcoriano chinese foods"
                android:textColor="#000000"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delivers in"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/deliversin"
                android:textColor="#80000000"/>
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="450 min "
                android:maxLines="1"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textSize="16dp"
                android:id="@+id/deliveringtimetext"
                android:textColor="#90000000"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:orientation="horizontal">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:id="@+id/vendordisplayrating"
                style="@style/myratingbarsmall"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/category1image"
                android:src="@drawable/darkcircle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/vendordisplayitemctegory1"
                android:text="Chinesefffffffffffffffff"
                android:maxLines="1"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:textColor="#99000000"
                android:textSize="17dp"

               />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/category2image"
                    android:src="@drawable/darkcircle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/vendordisplayitemctegory2"
                    android:text="Chinesefffffffffffffffff"
                    android:maxLines="1"
                    android:layout_marginTop="2dp"
                    android:textColor="#99000000"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:textSize="17dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/category3image"
                    android:src="@drawable/darkcircle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:id="@+id/vendordisplayitemctegory3"
                    android:text="Chinesefffffffffffffffff"
                    android:maxLines="1"
                    android:layout_marginTop="2dp"
                    android:textColor="#99000000"
                    android:ellipsize="end"

                    android:textSize="17dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>
