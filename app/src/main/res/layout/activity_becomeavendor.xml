<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"

    tools:context="com.electonicmarket.android.emarket.Activities.becomeavendor">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/becomeavendortoolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Become a Seller"
            android:textSize="20dp"

            android:id="@+id/becomeavendortitle"
            android:textColor="@color/White"
            android:layout_marginLeft="20dp"/>

    </androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
    android:id="@+id/becomeavendoremailtitle"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"

    android:text="Email"
    android:textColor="#000000"
    android:textSize="18dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:inputType="text"
        android:id="@+id/becomeavendoremailvalue"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:textSize="20dp"
        android:paddingLeft="10dp"

        android:layout_marginRight="10dp"
        android:background="@drawable/edittextrectangle"/>
    <TextView
        android:id="@+id/becomeavendorstatetitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:text="State"
        android:textColor="#000000"
        android:textSize="18dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:inputType="text"
        android:id="@+id/becomeavendorstatevalue"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:textSize="20dp"
        android:paddingLeft="10dp"

        android:layout_marginRight="10dp"
        android:background="@drawable/edittextrectangle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="City "
        android:textSize="18dp"
        android:id="@+id/becomevendorcitytitle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:inputType="text"
        android:gravity="left|center"
        android:textSize="20dp"
        android:id="@+id/becomevendorcityvalue"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextrectangle"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Apply"
        android:textSize="18dp"
        android:id="@+id/becomeavendorapply"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/seevendorbuttondesign"
        android:textColor="@color/White"
        android:gravity="center"/>

</LinearLayout>
</LinearLayout>
